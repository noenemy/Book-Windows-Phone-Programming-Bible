            <Path Fill="Blue" Stroke="Gray" StrokeThickness="8">
             <Path.Data>
                <EllipseGeometry Center="350,80" RadiusX="70" RadiusY="70" />
             </Path.Data>
            </Path>
-->
            <Path Fill="Maroon" Stroke="White" StrokeThickness="2"
                  Data="M 20,150
                        C 140,200 20,270 100,350
                        L 400,280
                        C 520,150 50,50 20,150
                        Z" 
                  
                  />  
        </Grid>
    </Grid>
 
